#include <stdio.h>

int main() {
    while(1)
    {
        printf("enter name");
        char name[20];
        scanf("%s",name);
        printf("enter father name");
        char fname[20];
        scanf("%s",fname);
        printf("enter branch");
        char branch[10];
        scanf("%s",branch);
        printf("enter marital status 1 for single");
        int a;
        scanf("%d",&a);
        if(a==1)
        continue;
        printf("enter spouse name");
        char sname[20];
        scanf("%s",sname);
        printf("enter no of children");
        int b;
        scanf("%d",&b);
        printf("enter another record(y/n)");
        char ch;
        fflush(stdin);
        scanf("%c",&ch);
        if(ch=='n'||ch=='N')
        break;
     }
    return 0;
}
